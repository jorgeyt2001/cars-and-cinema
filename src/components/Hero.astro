<style>
  /* METROPOLIS-STYLE ANIMATIONS */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
  }

  @keyframes gradient {
    0%, 100% {
      transform: scale(1) rotate(0deg);
    }
    50% {
      transform: scale(1.2) rotate(5deg);
    }
  }

  .animate-gradient {
    animation: gradient 20s ease-in-out infinite;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
      opacity: 1;
    }
    50% {
      transform: translateY(-20px);
      opacity: 0.5;
    }
  }

  .animate-bounce {
    animation: bounce 2s ease-in-out infinite;
  }

  /* Video parallax effect - Metropolis style */
  .hero-video {
    transition: transform 0.1s ease-out;
  }

  .hero-background {
    transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
</style>

<script>
  // METROPOLIS-STYLE PARALLAX & SCROLL EFFECTS
  document.addEventListener('DOMContentLoaded', () => {
    const heroVideo = document.querySelector('.hero-video');
    const heroBackground = document.querySelector('.hero-background');
    const heroSection = document.querySelector('section');

    if (!heroVideo || !heroBackground || !heroSection) return;

    let ticking = false;

    const updateParallax = () => {
      const scrolled = window.pageYOffset;
      const heroHeight = heroSection.offsetHeight;

      // Only apply effect when hero is in viewport
      if (scrolled < heroHeight) {
        // Subtle video zoom and movement
        const zoomFactor = 1 + (scrolled / heroHeight) * 0.15;
        const translateY = scrolled * 0.5;
        heroVideo.style.transform = `scale(${zoomFactor}) translateY(${translateY}px)`;

        // Background blur on scroll
        const blurAmount = Math.min(scrolled / 100, 8);
        heroVideo.style.filter = `blur(${blurAmount}px)`;

        // Fade out effect
        const opacity = 1 - (scrolled / heroHeight) * 0.6;
        heroBackground.style.opacity = Math.max(opacity, 0.3).toString();
      }

      ticking = false;
    };

    const onScroll = () => {
      if (!ticking) {
        window.requestAnimationFrame(updateParallax);
        ticking = true;
      }
    };

    window.addEventListener('scroll', onScroll, { passive: true });

    // Initial call
    updateParallax();
  });
</script>
