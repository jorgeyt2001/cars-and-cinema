    specs: {
      power: '770',
      speed: '350',
      acceleration: '2.8s'
    },
    featured: true
  },
  {
    name: 'GT-R Nismo',
    brand: 'Nissan',
    price: 800,
    image: 'https://images.unsplash.com/photo-1609521263047-f8f205293f24?w=800&auto=format&fit=crop',
    specs: {
