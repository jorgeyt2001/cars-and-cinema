---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Alquiler de coches de lujo exclusivos - Cars & Cinema" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700;900&family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <script is:inline>
      // 3D STARFIELD PARTICLES - ULTRA FUTURISTIC (TikTok Style)
      window.addEventListener('DOMContentLoaded', () => {
        const canvas = document.getElementById('particles');
        if (!canvas) return;
        const ctx = canvas.getContext('2d');

        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const particles = [];
        const particleCount = 200; // More particles for denser effect
        let centerX = canvas.width / 2;
        let centerY = canvas.height / 2;
        const maxDepth = 2000;

        // Mouse interaction
        let mouseX = centerX;
        let mouseY = centerY;
        let targetX = centerX;
        let targetY = centerY;

        canvas.addEventListener('mousemove', (e) => {
          mouseX = e.clientX;
          mouseY = e.clientY;
        });

        canvas.addEventListener('mouseleave', () => {
          mouseX = centerX;
          mouseY = centerY;
        });

        class Particle3D {
          constructor() {
            this.reset();
          }

          reset() {
            // Random position in 3D space
            this.x = (Math.random() - 0.5) * 2000;
            this.y = (Math.random() - 0.5) * 2000;
            this.z = Math.random() * maxDepth; // Depth

            // Speed increases as particles get closer
            this.speed = 2 + Math.random() * 3;

            // Color variation - golden to white
            this.hue = 45 + Math.random() * 15; // 45-60 (golden range)
            this.brightness = 50 + Math.random() * 50;

            // Trail effect
            this.prevX = 0;
            this.prevY = 0;
          }

          update() {
            // Move towards viewer (decrease z)
            this.z -= this.speed;

            // Reset when particle passes viewer
            if (this.z <= 0) {
              this.reset();
              this.z = maxDepth;
            }
          }

          draw() {
            // Project 3D to 2D
            const focalLength = 300;
            const scale = focalLength / this.z;

            const x2d = centerX + this.x * scale;
            const y2d = centerY + this.y * scale;

            // Size based on depth (closer = bigger)
            const size = (1 - this.z / maxDepth) * 3 + 0.5;

            // Opacity based on depth
            const opacity = (1 - this.z / maxDepth) * 0.8 + 0.2;

            // Draw motion trail for speed effect
            if (this.prevX && this.prevY) {
              const gradient = ctx.createLinearGradient(this.prevX, this.prevY, x2d, y2d);
              gradient.addColorStop(0, `hsla(${this.hue}, 100%, ${this.brightness}%, 0)`);
              gradient.addColorStop(1, `hsla(${this.hue}, 100%, ${this.brightness}%, ${opacity * 0.5})`);

              ctx.strokeStyle = gradient;
              ctx.lineWidth = size * 0.5;
              ctx.beginPath();
              ctx.moveTo(this.prevX, this.prevY);
              ctx.lineTo(x2d, y2d);
              ctx.stroke();
            }

            // Draw particle
            const gradient = ctx.createRadialGradient(x2d, y2d, 0, x2d, y2d, size * 2);
            gradient.addColorStop(0, `hsla(${this.hue}, 100%, ${this.brightness}%, ${opacity})`);
            gradient.addColorStop(0.5, `hsla(${this.hue}, 100%, ${this.brightness}%, ${opacity * 0.5})`);
            gradient.addColorStop(1, `hsla(${this.hue}, 100%, ${this.brightness}%, 0)`);

            ctx.fillStyle = gradient;
            ctx.beginPath();
            ctx.arc(x2d, y2d, size * 2, 0, Math.PI * 2);
            ctx.fill();

            // Store previous position for trail
            this.prevX = x2d;
            this.prevY = y2d;
          }
        }

        // Create particles
        for (let i = 0; i < particleCount; i++) {
          particles.push(new Particle3D());
        }

        // Animation loop
        function animate() {
          // Smooth mouse follow
          targetX += (mouseX - targetX) * 0.05;
          targetY += (mouseY - targetY) * 0.05;

          // Update center based on mouse (parallax effect)
          centerX = canvas.width / 2 + (targetX - canvas.width / 2) * 0.15;
          centerY = canvas.height / 2 + (targetY - canvas.height / 2) * 0.15;

          // Fade effect for trails (instead of clearRect)
          ctx.fillStyle = 'rgba(10, 10, 10, 0.15)';
          ctx.fillRect(0, 0, canvas.width, canvas.height);

          // Sort particles by z-depth (far to near) for proper layering
          particles.sort((a, b) => b.z - a.z);

          particles.forEach(particle => {
            particle.update();
            particle.draw();
          });

          requestAnimationFrame(animate);
        }

        animate();

        window.addEventListener('resize', () => {
          canvas.width = window.innerWidth;
          canvas.height = window.innerHeight;
          centerX = canvas.width / 2;
          centerY = canvas.height / 2;
          mouseX = centerX;
          mouseY = centerY;
          targetX = centerX;
          targetY = centerY;
        });

        // Scroll reveal animations
        const observerOptions = {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('revealed');
            }
          });
        }, observerOptions);

        // Observe all elements with scroll-reveal class
        document.querySelectorAll('.scroll-reveal').forEach(el => {
          observer.observe(el);
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function(e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
              target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }
          });
        });

        // Parallax effect on scroll
        let ticking = false;
        window.addEventListener('scroll', () => {
          if (!ticking) {
            window.requestAnimationFrame(() => {
              const scrolled = window.pageYOffset;
              const parallaxElements = document.querySelectorAll('[data-parallax]');

              parallaxElements.forEach(el => {
                const speed = el.dataset.parallax || 0.5;
                el.style.transform = `translateY(${scrolled * speed}px)`;
              });

              ticking = false;
            });
            ticking = true;
          }
        });
      });
    </script>
    <style is:global>
      @import '../styles/global.css';
    </style>
  </head>
  <body>
    <!-- Custom Cursor -->
    <div class="custom-cursor"></div>
    <div class="custom-cursor-follower"></div>

    <!-- Loading Screen -->
    <div id="loading-screen" class="fixed inset-0 z-[10000] bg-black flex items-center justify-center">
      <div class="text-center">
        <div class="loader mx-auto mb-8"></div>
        <h2 class="text-2xl sm:text-3xl font-bold gradient-text" style="font-family: var(--font-heading);">
          CARS & CINEMA
        </h2>
        <p class="text-white/60 mt-2">Cargando experiencia de lujo...</p>
      </div>
    </div>

    <canvas id="particles" class="fixed inset-0 z-0 pointer-events-none" style="opacity: 0.3;"></canvas>
    <div class="relative z-10 w-full">
      <slot />
    </div>

    <script is:inline>
      // Custom Cursor - OPTIMIZED
      document.addEventListener('DOMContentLoaded', () => {
        const cursor = document.querySelector('.custom-cursor');
        const follower = document.querySelector('.custom-cursor-follower');

        if (!cursor || !follower) return;

        let mouseX = 0, mouseY = 0;
        let followerX = 0, followerY = 0;

        // Use transform for better performance
        document.addEventListener('mousemove', (e) => {
          mouseX = e.clientX;
          mouseY = e.clientY;
          cursor.style.transform = `translate(${mouseX}px, ${mouseY}px) translate(-50%, -50%)`;
        }, { passive: true });

        // Smooth follower animation
        function animateFollower() {
          followerX += (mouseX - followerX) * 0.2; // Increased from 0.1 to 0.2 for faster response
          followerY += (mouseY - followerY) * 0.2;

          follower.style.transform = `translate(${followerX}px, ${followerY}px) translate(-50%, -50%)`;
          requestAnimationFrame(animateFollower);
        }

        animateFollower();

        // Add hover effect on interactive elements
        const interactives = document.querySelectorAll('a, button, [role="button"]');
        interactives.forEach(el => {
          el.addEventListener('mouseenter', () => cursor.classList.add('cursor-hover'));
          el.addEventListener('mouseleave', () => cursor.classList.remove('cursor-hover'));
        });

        // Loading Screen - Hide after DOMContentLoaded or max 2 seconds
        const hideLoadingScreen = () => {
          const loadingScreen = document.getElementById('loading-screen');
          if (loadingScreen && loadingScreen.style.display !== 'none') {
            loadingScreen.style.opacity = '0';
            loadingScreen.style.transition = 'opacity 0.5s ease';
            setTimeout(() => {
              loadingScreen.style.display = 'none';
            }, 500);
          }
        };

        // Hide on load or after max timeout
        window.addEventListener('load', () => {
          setTimeout(hideLoadingScreen, 300);
        });

        // Fallback: hide after 1 second no matter what
        setTimeout(hideLoadingScreen, 1000);
      });
    </script>
  </body>
</html>
